<%- include('partials/header') %>

  <body id="profile">

    <nav>
      <div class="left">
      
     
            
              <a href="/">Homepage</a>
              <a href="search">Search</a>
              <a href="urls">Links</a>
            
          </div>


          <div class="right">
            <% if (user) { %>
              <button class="btn btn-outline"><a href="/auth/logout">Log out</a></button>
              <% } else { %>
                <a href="/">Login</a>
                <% } %>
            <header>
              <h1>Hi, <%= user.user_name %> <img src="<%= user.thumbnail %>" /></h1>
             
            </header>
          </div>
    </nav>


    <section id="search">
      <div class="flex-container">
        <div>
          <p>Discover what you're looking for.</p>
          <form action="/profile/search" method="POST">
           
            <input type="text" name="query" >
            <button class="btn btn-outline-success" type="submit">Search</button>
          </form>
          <h5>Search the tag you created.</h5>
  
        </div>
       
        <img src="/images/Browsing online-amico (1).svg">
      </div>
</section>





    <section id="urls">
      <div class="container">
        <h1>Shorten your links, amplify your reach.</h1>
        <p>Ready to shorten your long and messy URLs.</p>


        <form action="/profile/shortUrls" method="POST" class="my-4 form-inline">
          <label for="fullUrl" class="sr-only">Url</label>
          <input required placeholder="Paste the URL." type="url" name="fullUrl" id="fullUrl" class="form-control col mr-4">

          <label for="name" class="sr-only">Tag me!</label>
          <input required placeholder="Type the tag here." type="text" name="name" id="name" class="form-control col mr-2">
          <button class="btn btn-outline-secondary" type="submit">Shrink</button>
        </form>




        <table class="table table-striped table-responsive">
          <thead>
            <tr>
              <th>Full URL</th>
              <th>Short URL</th>
              <th>Delete</th>
              <th>Tag</th>
              <th>Copy the url.</th>
            </tr>
          </thead>

          <tbody>
            <% shortUrls.forEach(shortUrl=> { %>
              <tr>
                <td><a href="<%= shortUrl.full %>">
                    <%= shortUrl.full %>
                  </a></td>
                <td><a href="<%= shortUrl.short %>">
                    <%= "http://localhost:3000/" + shortUrl.short %>
                  </a></td>
                <td>
                  <form method="POST" action="/profile/shortUrls/delete">
                    <button class="btn btn-outline" type="submit"><i class="fa-solid fa-trash"></i></button>
                  </form>
                </td>
                <td>
                  <h3>
                    <%= shortUrl.name %>
                  </h3>
                </td>
                <td>
                  <button class="btn btn-outline"><i class="fa-solid fa-copy" style="color: black;"></i></button>
                </td>

              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
    </section>
    
    <section id="footer">
      <i class=" footer-icon fa-brands fa-twitter"></i>
      <i class=" footer-icon fa-brands fa-facebook"></i>
      <i class=" footer-icon fa-brands fa-instagram"></i>
      <i class=" footer-icon fa-solid fa-envelope"></i>
  
      <p class="footer-para">Â© Copyright2023 LinkTrim</p>
    </section>
  </body>
  <%- include('partials/footer') %>